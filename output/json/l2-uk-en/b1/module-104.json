      "title": "Different Subject Constructions",
      "description": "Choose the correct form.",
      "content": {
        "type": "quiz",
        "instructions": "Choose the correct form.",
        "questions": [
          {
            "question": "Я хочу, щоб вона ___ .",
            "options": [
              "прийшла",
              "прийти"
            ],
            "correctIndex": 0,
            "explanation": "Past tense form with different subject."
          },
          {
            "question": "Він просить, щоб я йому ___ .",
            "options": [
              "допоміг",
              "допомогти"
            ],
            "correctIndex": 0,
            "explanation": "Different subjects require past tense form."
          },
          {
            "question": "Важливо, щоб всі ___ правила.",
            "options": [
              "знали",
              "знати"
            ],
            "correctIndex": 0,
            "explanation": "Impersonal expression + different subject = past form."
          },
          {
            "question": "Вона хоче ___ відпочити. (same subject)",
            "options": [
              "щоб вона",
              "- (just infinitive)"
            ],
            "correctIndex": 1,
            "explanation": "Same subject = just infinitive, no щоб needed."
          },
          {
            "question": "Лікар радить, щоб він ___ ліки.",
            "options": [
              "приймав",
              "приймати"
            ],
            "correctIndex": 0,
            "explanation": "Different subject (doctor ≠ he)."
          },
          {
            "question": "Ми сподіваємося, щоб погода ___ гарна.",
            "options": [
              "була",
              "бути"
            ],
            "correctIndex": 0,
            "explanation": "\"Погода\" is a different subject."
          }
        ],
