  "activities": [
    {
      "id": "act-uk-B1-102-quiz",
      "type": "quiz",
      "title": "Location and Time Relatives",
      "description": "Choose the correct relative word.",
      "content": {
        "type": "quiz",
        "instructions": "Choose the correct relative word.",
        "questions": [
          {
            "question": "Місто, ___ я народився, — Харків.",
            "options": [
              "де",
              "куди"
            ],
            "correctIndex": 0,
            "explanation": "\"Де\" for static location (where I was born)."
          },
          {
            "question": "Країна, ___ вони переїхали, — Польща.",
            "options": [
              "де",
              "куди"
            ],
            "correctIndex": 1,
            "explanation": "\"Куди\" for direction/destination (where they moved to)."
          },
          {
            "question": "Рік, ___ я закінчив університет, — 2019.",
            "options": [
              "де",
              "коли"
            ],
            "correctIndex": 1,
            "explanation": "\"Коли\" for time expressions."
          },
          {
            "question": "Місто, ___ він родом, — Одеса.",
            "options": [
              "куди",
              "звідки"
            ],
            "correctIndex": 1,
            "explanation": "\"Звідки\" for origin (where from)."
          },
          {
            "question": "Офіс, ___ я працюю, на третьому поверсі.",
            "options": [
              "де",
              "куди"
            ],
            "correctIndex": 0,
            "explanation": "\"Де\" for location of work."
          },
          {
            "question": "Все, ___ я знаю, — правда.",
            "options": [
              "яке",
              "що"
            ],
            "correctIndex": 1,
            "explanation": "\"Що\" after indefinite pronouns like \"все.\""
          }
        ],
